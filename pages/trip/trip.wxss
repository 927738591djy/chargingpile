/* pages/trip/trip.wxss */
page{
  background-color: rgb(243, 241, 241);
}
.calendar{
  height: 500rpx;
}
.top{
  padding: 25rpx 0;
  display: flex;
  height: 50rpx;
  background-color: #fff;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  z-index: 800;
  width: 100%;
}
.close{
  color: #ccc;
  background-color: rgb(235, 231, 231);
  border-radius: 30rpx;
  padding: 5rpx 10rpx;
  margin-right: 20rpx;
}
.top_left{
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.van-calendar{
  height: 500rpx;
}
.van-calendar__selected-day{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50rpx;
    background: #62a0f4;
}
.van-cell-group{
  margin-bottom: 25rpx;
}
.selected_time{
  margin-top: 20rpx;
}